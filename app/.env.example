# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/broker_agent

# Server
PORT=3050
NODE_ENV=development

# ===========================================
# LLM Providers (choose one)
# ===========================================

# Option 1: OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# Option 2: OpenRouter
OPENROUTER_API_KEY=sk-or-...

# Option 3: Ollama (local, no API key needed)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Explicit provider selection (optional)
# LLM_PROVIDER=ollama        # ollama | openai | mock
# EMBEDDING_PROVIDER=ollama  # ollama | openai | mock

# ===========================================
# Trading Configuration
# ===========================================
# Trading Mode: test | paper | live
TRADING_MODE=paper

# External APIs
FINNHUB_API_KEY=
TAVILY_API_KEY=
TWITTER_BEARER_TOKEN=

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379
